<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/item_tv"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="64dp"
        android:text="Fertilizer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginTop="76dp"
        android:text="Price"
        app:layout_constraintEnd_toEndOf="@+id/quantity_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/quantity_tv"
        app:layout_constraintTop_toBottomOf="@+id/quantity_tv" />

    <Spinner
        android:id="@+id/item_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toEndOf="@+id/item_tv"
        app:layout_constraintTop_toTopOf="@+id/item_tv"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/price_ed"
        android:layout_width="119dp"
        android:layout_height="61dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:inputType="number"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/quantity_ed"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/price_tv"
        app:layout_constraintTop_toBottomOf="@+id/quantity_ed" />

    <TextView
        android:id="@+id/quantity_tv"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginTop="32dp"
        android:text="Quantity"
        app:layout_constraintEnd_toEndOf="@+id/item_tv"
        app:layout_constraintStart_toStartOf="@+id/item_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_tv" />

    <EditText
        android:id="@+id/quantity_ed"
        android:layout_width="126dp"
        android:inputType="number"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/quantity_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toEndOf="@+id/quantity_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_spinner" />

    <Button
        android:id="@+id/buy_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Buy"
        app:layout_constraintEnd_toEndOf="@+id/price_ed"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="@+id/price_tv"
        app:layout_constraintTop_toBottomOf="@+id/price_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>