<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/item_tv"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="52dp"
        android:text="Item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginTop="36dp"
        android:text="Price"
        app:layout_constraintEnd_toEndOf="@+id/quantity_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/quantity_tv"
        app:layout_constraintTop_toBottomOf="@+id/quantity_tv" />

    <Spinner
        android:id="@+id/item_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toEndOf="@+id/item_tv"
        app:layout_constraintTop_toTopOf="@+id/item_tv" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="102dp"
        android:layout_height="27dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/quantity_spinner"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="@+id/quantity_spinner"
        app:layout_constraintTop_toBottomOf="@+id/quantity_spinner" />

    <TextView
        android:id="@+id/quantity_tv"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginTop="32dp"
        android:text="Quantity"
        app:layout_constraintEnd_toEndOf="@+id/item_tv"
        app:layout_constraintStart_toStartOf="@+id/item_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_tv" />

    <Spinner
        android:id="@+id/quantity_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="@+id/item_spinner"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_spinner"
        tools:layout_editor_absoluteY="101dp" />


</androidx.constraintlayout.widget.ConstraintLayout>